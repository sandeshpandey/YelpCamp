<%- include("../partials/header.ejs") %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1 style="text-align:center;">
				Edit comment
			</h1>
		</div>

		<div class="col-md-6 mx-auto">
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				
				<div class="form-group">
					<textarea class="form-control" name="comment[text]" placeholder="comment" rows="3"><%=comment.text%></textarea>
				</div>
                
				<div class="form-group">
					<button class="btn btn-outline-success btn-block">
					Submit
				</button>
				</div>
				
				
			</form>
			<a href="/campgrounds/<%= campground_id %>" class="btn btn-warning">Go back</a>
		</div>
	

	
		
	</div>
	
</div>

<%- include("../partials/footer.ejs") %></div>