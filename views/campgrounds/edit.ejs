<%- include("../partials/header.ejs") %>

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1 style="text-align:center;">
				Edit <%= campground.name %>
			</h1>
		</div>

		<div class="col-md-6 mx-auto">
			<form action="/campgrounds/<%= campground.id%>/?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>" placeholder="name">
				</div>
				<div class="form-group">
					<textarea class="form-control" name="campground[description]" placeholder="description" rows="3"><%=campground.description%></textarea>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" placeholder="price">
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="campground[image]" placeholder="image url" value="<%=campground.image%>">
				</div>
				<div class="form-group">
					<button class="btn btn-outline-success btn-block">
					Edit
				</button>
				</div>
				
				
			</form>
			<a href="/campgrounds/<%= campground.id%>" class="btn btn-warning">Go back</a>
		</div>
	

	
		
	</div>
	
</div>

<%- include("../partials/footer.ejs") %>