<%- include("../partials/header") %>



<div class="container">
	<header class="jumbotron">
	<h1 class="display-4">Welcome To YelpCamp!</h1>
  	<p class="lead">View our hand-picked campgrounds from all arount the world</p>
  	<hr class="my-4">
  	<p>A Pandey inc. Product</p>
  	<p class="lead">
    <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campgrounds</a>
  </p>
</header>

<div class="row">
	<div class="col-md-12">
		<h3>
			Our Most Popular  CampGrounds
		</h3>
	</div>
</div>	

	<div class="row">
		<% campgrounds.forEach(campground=>{ %>
		<div class="col-12 col-lg-3 col-md-6">
			<div class="card mb-2">
				<img class="card-img-top img-thumbnail" src="<%= campground.image %>" alt="Card image cap">
				<div class="card-body">
				  <h5 class="card-title"><%= campground.name %></h5>
				  <p class="card-text"><%= campground.description.substring(0,100) %>...</p>
				  <a href="/campgrounds/<%= campground._id %>" class="btn btn-outline-info">More Info</a>
				</div>
			  </div>
		</div>
		<% }) %>
	</div>
</div>
</div>



<%- include("../partials/footer") %>